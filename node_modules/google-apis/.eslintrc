{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:flowtype/recommended"
  ],
  "rules": {
    "semi": 2
  },
  "plugins": [
    "flowtype"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "es6": true,
    "node": true
  },
  "overrides": [
    {
      "files": [ "bin/*.js", "lib/*.js" ],
      "excludedFiles": [ "src/*.js" ]
    }
  ]
}
